@import 'nib'

// VARIABLES
// ---------
base_font_size   = 14px
base_line_height = 20px
text_color       = #000
link_color       = #13f
sidebar_width    = 220px

// BASE
// ----
*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

html, body
  height: 100%

body
  margin: 0
  padding: 0
  font-size: base_font_size
  line-height: base_line_height
  font-family: serif
  color: text_color
  -webkit-font-smoothing: antialiased

  a, a:visited
    font-family: sans-serif
    color: link_color
    text-decoration: none
    font-weight: bold
    &:hover
      color: link_color
      text-decoration: underline

  // LOADING INDICATOR
  &.loading
    background: #fff url('../images/loader.gif') center center no-repeat

h1, h2, h3, h4
  font-family: sans-serif
  font-weight: bold


h1, h2, h3, h4
  text-align: left
  font-size: base_font_size
  text-decoration: underline

nav
  margin: base_line_height 0
  text-align: left

// STRUCTURE
// ---------
#menu
  position: fixed
  top: 0
  bottom: 0
  left: 0
  width: sidebar_width
  overflow-y: scroll
  overflow-x: hidden
  background-color: #fff
  padding: base_line_height
  font-size: base_font_size - 2
  .Text
    font-family: sans-serif
    margin-top: base_line_height
  .logo
    cursor: pointer

#container
  min-height: 100%
  margin-left: sidebar_width
  padding: base_line_height
  &.loading
    background: #fff url('../images/loader.gif') center center no-repeat

#info
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  pointer-events: none

#channel-info
  position: fixed
  width: 200px
  top: base_line_height
  right: 100px + base_line_height
  height: 400px
  overflow-y: auto
  overflow-x: hidden
  p
    margin-top: 0


#mode
  position: fixed
  width: 100px
  top: base_line_height
  right: 0
  margin: 0

#mode a, #channel-info a.toggle
    text-transform: uppercase
    font-size: base_font_size - 2
    color: #000
    display: block


// GRID
// ----
#blocks.grid
  .block
    display: inline-block
    height: 250px
    width: 250px
    line-height: 250px
    text-align: center
    vertical-align: middle
    margin: 0 base_line_height base_line_height 0
    img
      -webkit-box-shadow: 4px 4px 4px 0px #ccc
      box-shadow: 4px 4px 4px 0px #ccc

#blocks.list
  padding-right: 240px

#blocks.list .block, #single
  clearfix()
  margin-bottom: base_line_height*4

  article, aside
    float: left
    width: 50%
    img, object, embed, iframe
      max-width: 100%
      max-height: 100%
      -webkit-box-shadow: 4px 4px 4px 0px #ccc
      box-shadow: 4px 4px 4px 0px #ccc
  article
    // 
  aside
    padding: 0 base_line_height*5
    h4
      margin-top: 0

.connections
  ul, li
    list-style: none
    margin: 0
    padding: 0

.metadata dl
  dt
    font-weight: bold
  dt, dd
    line-height: 16px
    font-size: 12px
    font-family: sans-serif
    text-align: left
    margin: 0
    a, a:visited
      text-decoration: none

// NON-SEMANTIC / UTILITY
// -------
.hide
  display: none

.show
  display: block

.meta-sep
  color: #ccc
  margin: 0 base_line_height * 0.25

.arena-mark
  width: 21px
  height: 12px
  background: transparent url('../images/arena-mark.png') no-repeat center center
