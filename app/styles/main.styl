@import 'nib'

body
  font-size: 14px
  line-height: 18px
  font-family: serif
  padding: 5%
  // Collection
  &.collection
    color: #111
    background: #fff
    a
      color: #000
  // Single
  &.single
    background: #000
    color: #eee
    a
      color: #fff
  // Loading
  &.loading
    background: #fff url('../images/load.gif') top left no-repeat

h1, h2, h3, h4, nav
  font-family: sans-serif

h1, h2, h3, h4
  text-align: center
  font-size: 16px

nav
  margin: 20px 0
  text-align: center

.title, .content
  font-size: 16px
  text-align: left


#blocks.list .block, #single.block
  margin: 20px 0
  padding-bottom: 20px
  border-bottom: 1px solid #000
  .image, .link, .media
    text-align: center
#blocks.grid
  text-align: center
  .block
    display: inline-block
    height: 250px
    width: 250px
    line-height: 250px
    text-align: center
    vertical-align: middle

.metadata dl
  dt
    font-weight: bold
  dt, dd
    line-height: 16px
    font-size: 12px
    font-family: sans-serif
    text-align: left
    margin: 0
    a
      text-decoration: none

// MODAL
// -----
#modal
  position    : fixed
  top         : 0
  left        : 0
  z-index     : 1
  background  : red
  width       : 100%
  height      : 100%

// UTILITY
// -------
.hide
  display: none

.show
  display: block